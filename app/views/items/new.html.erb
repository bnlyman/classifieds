<div class = "container">
	<h1> Post new item </h1>
	<%= form_for @item do |f| %>
	  
	  <%= f.label :Category %>: 
 		<%= f.select :category, options_for_select(%w(Automobiles Electronics Furniture Home/Kitchen Apparel/Accessories Outdoors/SportingGoods Other))%>

	  <%= f.label :Name %> 
	  <%= f.text_field :name %>

	  <%= f.label :Price %>
	  <%= f.text_field :price %>

	  <%= f.label :Description %>
	  <%= f.text_field :description %>

	  <%= f.hidden_field :user_id, value: current_user.id %>

	  <%= f.submit class: 'btn btn-primary' %>
	<% end %>
</div>

  