	<div class = "jumbotron">
		<h1> Items </h1>
		<p><%= link_to 'Post new item', new_item_path %></p>
		<% @items.each do |item| %>
		  <h2><%= item.category %></h2>
		  <h2><%= item.name %></h2>
		  <h3><%= item.price %></h3>
		  <p><%= item.description %></p>
		  <%= link_to 'Show', item_path(item) %>
		  <%= link_to 'Edit', edit_item_path(item) %>
		  <%= link_to 'Delete', item, method: :delete %>
		<% end %>
	</div>

