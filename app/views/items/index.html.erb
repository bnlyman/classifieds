<body>
	<div class ="span">
		<h1> Items </h1>
		<p><%= link_to 'Post new item', new_item_path %></p>
		<table class = 'table table-striped'>
			<thead>
	      <tr>
	      	<th>Status</th>
	        <th>Category</th>
	        <th>Name</th>
	        <th>Price</th>
	        <th>Description</th>
	        <th> </th>
	      </tr>
	    </thead>
	    <tbody>
	    <% @items.each do |item| %>
	    <tr>
				<% if item.status == true %>
					<td>Sold</td>
					<% else %>
					<td>Available</td>
				<% end %>
			  <td><%= item.category %></td>
			  <td><%= item.name %></td>
			  <td><%= item.price %></td>
			  <td><%= item.description %></td>
			  <td><%= link_to 'Show', item_path(item) %>
		  			<%= link_to 'Edit', edit_item_path(item) %>
		  			<%= link_to 'Delete', item, method: :delete %>
		  	</td>
			</tr>
			<% end %>
	    </tbody>
  	</table>
	</div>
</body



	