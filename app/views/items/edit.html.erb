<div class="container">
<h1> Edit this posting </h1>
	<%= form_for @item do |f| %>
	  <%= f.label :category %>: 
 		<%= f.select :category, options_for_select(%w(Automobiles Electronics Furniture Home/Kitchen Apparel/Accessories Outdoors/Sporting-Goods Other))
 		%>
 		
	  <%= f.label :name %> 
	  <%= f.text_field :name %>

	  <%= f.label :price %>
	  <%= f.text_field :price %>

	  <%= f.label :description %>
	  <%= f.text_field :description %>

	  <%= f.label :sold?  %>
	  <%= f.check_box :status, as: :boolean %>

	  <%= f.submit class: 'btn btn-primary' %>
	<% end %>
</div>