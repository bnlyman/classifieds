<div class ="container">
	<h1> My Items </h1>
	<p><%= link_to 'Post new item', new_item_path, class: 'btn btn-primary'%></p>
	<table class = 'table table-striped'>
		<thead>
      <tr>
      	<th>Status</th>
        <th>Category</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @user.items.each do |item| %>
    <tr>
			<% if item.status == true %>
				<td>Sold</td>
				<% else %>
				<td>Available</td>
			<% end %>
		  <td><%= item.category %></td>
		  <td><%= item.name %></td>
		  <td>$<%= item.price %></td>
		  <td><%= item.description %></td>
		  <td>
		  	<div class="btn-group btn-group-xs">
					<%= link_to 'View', item_path(item), class: "btn btn-primary" %>
					<%= link_to 'Edit', edit_item_path(item), class: "btn btn-primary" %>
						<%= link_to 'Delete', item, data: { confirm: "Are you sure you wish to delete this listing?" }, method: :delete, class: "btn btn-primary" %>
					</div>
	  	</td>
		</tr>
		<% end %>
    </tbody>
	</table>
</div>